<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bacround_gradient">





    <TextView

        android:id="@+id/Txt2"
        android:layout_width="350dp"

        android:layout_height="79dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="Chức năng cho quản trị viên"
        android:textAlignment="center"
        android:textColor="#111111"
        android:textSize="30dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/Edtsocau"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Txt1"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:hint="Tối thiểu 5-10"
        android:inputType="number"
        android:text=""
        android:textSize="20dp" />

    <Button
        android:id="@+id/BtnNext"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_background_green1"
        android:text="Tiếp theo"
        android:textSize="20dp"
        android:enabled="false"
        app:iconTint="#000000" />
    <Button
        android:id="@+id/BtnBack"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_background_green2"
        android:text="Trở về"
        android:textSize="20dp" />


</LinearLayout>